<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <include layout="@layout/view_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dip" >

        <android.support.v4.view.ViewPager
            android:id="@id/vpService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@id/llPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv00"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="洗车"
                    android:textColor="@color/tab_txt"
                    android:width="0dip" />

                <TextView
                    android:id="@+id/tv01"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="美容"
                    android:textColor="@color/tab_txt"
                    android:width="0dip" />

                <TextView
                    android:id="@+id/tv02"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="保养"
                    android:textColor="@color/tab_txt"
                    android:width="0dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv03"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="改装"
                    android:textColor="@color/tab_txt"
                    android:width="0dip" />

                <TextView
                    android:id="@+id/tv04"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="修理"
                    android:textColor="@color/tab_txt"
                    android:width="0dip" />

                <TextView
                    android:id="@+id/tv05"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="轮胎"
                    android:textColor="@color/tab_txt"
                    android:width="0dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv06"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="电瓶"
                    android:textColor="@color/tab_txt"
                    android:width="0dip" />

                <TextView
                    android:id="@+id/tv07"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="加油"
                    android:textColor="@color/tab_txt"
                    android:width="0dip" />

                <TextView
                    android:id="@+id/tv08"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="4S"
                    android:textColor="@color/tab_txt"
                    android:width="0dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv09"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="二手车"
                    android:textColor="@color/tab_txt"
                    android:width="0dip" />

                <TextView
                    android:id="@+id/tv10"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="代理代办"
                    android:textColor="@color/tab_txt"
                    android:width="0dip" />

                <TextView
                    android:id="@+id/tv11"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="汽车用品"
                    android:textColor="@color/tab_txt"
                    android:width="0dip" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>